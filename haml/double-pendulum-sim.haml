!!!
%html
  %head
    %title Physics: Double Pendulum in JS
    %link{href: "../assets/stylesheets/double_pendulum.css", rel: "stylesheet", type: "text/css"}/
    %script{src: "http://ajax.googleapis.com/ajax/libs/jquery/1.6/jquery.min.js", type: "text/javascript"}
    %script{src: "../assets/javascripts/resize.js", type: "text/javascript"}
  %body
    .sidebar
      %form#set_variables_form
        %label{for: "mass1"} Mass1:
        %input#mass1{max: "50", min: "1", type: "range", value: "10"}/
        %label{for: "mass2"} Mass2:
        %input#mass2{max: "50", min: "1", type: "range", value: "10"}/
        %label{for: "Theta1"} Theta1 (in deg):
        %input#Theta1{max: "90", min: "0", type: "range", value: "50"}/
        %label{for: "Theta2"} Theta2 (in deg):
        %input#Theta2{max: "90", min: "0", type: "range", value: "65"}/
        %input.submit-btn{type: "submit", value: "Start Simulation"}/
    %canvas#myCanvas.phys-canvas{height: "600", width: "700"}
    %script{src: "../assets/javascripts/pendulum.js", type: "text/javascript"}
